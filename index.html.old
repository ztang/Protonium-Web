<script>
    function submit(){
      if($('#nameinput').val()!="" && $('#emailinput').val()!=""){
        $.ajax({
         "url":"save.php",
         "data":{'nameinput':$('#nameinput').val(),'emailinput':$('#emailinput').val()},
         "type":"post",
         "error":function(){
           alert("Error");
         },
         "success":function(response){
           alert(response);
          }
        });
      }else{
        alert("Please don't submit empty information");
      }
    };
</script>
